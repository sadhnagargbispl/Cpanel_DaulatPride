@model Daulatpride.Domain.Entities.UserRegistration

@{
    ViewData["Title"] = "Registration";
}

<!-- BUTTON TO OPEN MODAL -->
<button class="btn btn-primary" data-coreui-toggle="modal" data-coreui-target="#customerModal">
    Open Registration
</button>

<!-- MODAL -->
<div class="modal fade" id="customerModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <form method="post" asp-action="Index" asp-controller="Registration">

                <!-- HEADER -->
                <div class="modal-header">
                    <h5 class="modal-title">Registration</h5>
                    <button type="button" class="btn-close" data-coreui-dismiss="modal"></button>
                </div>

                <!-- BODY -->
                <div class="modal-body">

                    <!-- Sponsor -->
                    <div class="input-group mb-3">
                        <span class="input-group-text">Sponsor ID</span>
                        <input type="text" name="SponsorId" class="form-control" required>
                    </div>

                    <!-- Full Name -->
                    <div class="input-group mb-3">
                        <span class="input-group-text">Full Name</span>
                        <input type="text" name="FullName" class="form-control" required>
                    </div>

                    <!-- Gender -->
                    <div class="input-group mb-3">
                        <span class="input-group-text">Gender</span>
                        <select name="Gender" class="form-control">
                            <option value="M">Male</option>
                            <option value="F">Female</option>
                        </select>
                    </div>

                    <!-- Country -->
                    <div class="input-group mb-3">
                        <span class="input-group-text">Country</span>
                        <select name="CountryId" class="form-control" required>
                            <option value="">-- Select Country --</option>
                            @foreach (var c in ViewBag.Countries)
                            {
                                <option value="@c.Id">@c.Name</option>
                            }
                        </select>
                    </div>

                    <!-- Mobile -->
                    <div class="input-group mb-3">
                        <input type="text" name="StdCode" class="form-control w-25" readonly>
                        <input type="text" name="MobileNo" class="form-control w-75"
                               maxlength="10" required>
                    </div>

                    <!-- Email -->
                    <div class="input-group mb-3">
                        <span class="input-group-text">Email</span>
                        <input type="email" name="Email" class="form-control" required>
                    </div>

                    <!-- DOB -->
                    <div class="input-group mb-3">
                        <span class="input-group-text">DOB</span>
                        <input type="date" name="Dob" class="form-control" required>
                    </div>

                    <!-- PAN -->
                    <div class="input-group mb-3">
                        <span class="input-group-text">PAN No</span>
                        <input type="text" name="PanNo" class="form-control" required>
                    </div>

                    <!-- TERMS -->
                    <div class="form-check mt-2">
                        <input type="hidden" name="AgreeTerms" value="false" />
                        <input class="form-check-input" type="checkbox"
                               name="AgreeTerms" value="true" required>
                        <label class="form-check-label">
                            I Agree With <a href="#">Terms And Condition</a>
                        </label>
                    </div>

                </div>

                <!-- FOOTER -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"
                            data-coreui-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>

            </form>

        </div>
    </div>
</div>
